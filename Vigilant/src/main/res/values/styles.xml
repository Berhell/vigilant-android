<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FullScreen" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="VigilantTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/VigilantActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="VigilantActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar</item>
    </style>


    <style name="SplitActionBar_Vigilant">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:background">@color/red_dark_80</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SplitActionBar_ButtonText_Vigilant">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LayoutBackground_Vigilant">
        <item name="android:background">#DDD</item>
    </style>

    <style name="LinearLayoutDefault_Vigilant">
        <item name="android:background">#DDD</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ProfileListItem_Vigilant">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="EditText_canvas_vigilant">
        <item name="android:layout_marginLeft">@dimen/vigilant_object_horizontal_margin_root_layout</item>
        <item name="android:layout_marginRight">@dimen/vigilant_object_horizontal_margin_root_layout</item>
        <item name="android:layout_marginTop">@dimen/vigilant_object_vertical_margin_root_layout</item>
        <item name="android:layout_marginBottom">@dimen/vigilant_object_vertical_margin_root_layout</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="EditText_vigilant">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">#00000000</item>
        
    </style>


    <style name="TextArea_canvas_vigilant">
        <item name="android:layout_marginLeft">@dimen/vigilant_object_horizontal_margin_root_layout</item>
        <item name="android:layout_marginRight">@dimen/vigilant_object_horizontal_margin_root_layout</item>
        <item name="android:layout_marginTop">@dimen/vigilant_object_vertical_margin_root_layout</item>
        <item name="android:layout_marginBottom">@dimen/vigilant_object_vertical_margin_root_layout</item>
        <item name="android:padding">@dimen/vigilant_object_padding_default</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="address_canvas">
        <item name="android:background">@color/gray_medium</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>




</resources>
