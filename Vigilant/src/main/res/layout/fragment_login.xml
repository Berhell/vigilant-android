<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LayoutBackground_Vigilant">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        style="@style/LayoutBackground_Vigilant">

        <ImageView
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_gravity=""
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_logo_login"
            android:layout_marginTop="50dp"/>



        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_width="fill_parent"
            android:orientation="horizontal">


            <Button
                xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_facebook_button"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_facebook_login"
                android:onClick=""
                android:text="Enter with Facebook"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="@string/login_observation_title"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="@string/login_observation_text"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>