<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.vigilant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <permission
        android:name="com.br.vigilant.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="com.br.vigilant.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The following two permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/VigilantTheme" >
        <activity
            android:name="com.br.vigilant.MapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.br.vigilant.Map2"
            android:label="@string/title_activity_map2"
            android:parentActivityName="com.br.vigilant.MapActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.br.vigilant.MapActivity" />
        </activity>
        <activity
            android:name="com.br.vigilant.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="com.br.vigilant.MapActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.br.vigilant.MapActivity" />
        </activity>
        <activity
            android:name="com.br.vigilant.EditEmail"
            android:label="@string/title_activity_edit_email"
            android:parentActivityName="com.br.vigilant.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.br.vigilant.ProfileActivity" />
        </activity>
        <activity
            android:name="com.br.vigilant.EditPassword"
            android:label="@string/title_activity_edit_password"
            android:parentActivityName="com.br.vigilant.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.br.vigilant.ProfileActivity" />
        </activity>
        <activity
            android:name="com.br.vigilant.EditCity"
            android:label="@string/title_activity_edit_city"
            android:parentActivityName="com.br.vigilant.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.br.vigilant.ProfileActivity" />
        </activity>




        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAWG41TosL_wiY6hd2_Wkh2TIJy_pLzI4s" />

    </application>

</manifest>
