<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/item_settings_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_item_settings_profile"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/image_mock" />

        <TextView
            android:id="@+id/text_item_settings_profile"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
            android:text="Test" />



    </LinearLayout>


</LinearLayout>