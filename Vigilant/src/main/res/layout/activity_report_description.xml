<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LayoutBackground_Vigilant">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/vigilant_object_vertical_margin_root_layout"
        android:layout_marginBottom="@dimen/vigilant_object_vertical_margin_root_layout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Manor Village,Cork Road,251"
                    android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Waterford"
                    android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="12/12/2012"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:background="@color/green_medium">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Solved 14/01/2013"
            android:textSize="11sp"
            android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
            android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/image_mock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:src="@drawable/image_mock" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Public Facility"
                android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="@color/gray_medium">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:src="@drawable/image_mock" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:text="20 bothered"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:src="@drawable/image_mock" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/vigilant_object_vertical_margin_root_layout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_1_paragraph"
            android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
            android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout"
            android:layout_marginBottom="@dimen/vigilant_object_vertical_margin_root_layout"/>
    </LinearLayout>


</LinearLayout>