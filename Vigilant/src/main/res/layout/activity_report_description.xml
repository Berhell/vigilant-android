<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBackground_Vigilant">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/LayoutBackground_Vigilant">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/vigilant_object_vertical_margin_root_layout"
                android:layout_marginBottom="@dimen/vigilant_object_vertical_margin_root_layout">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_address_reportDescription"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Manor Village,Cork Road,251"
                            android:textSize="15sp"
                            android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                            android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />

                        <TextView
                            android:id="@+id/textview_country_reportDescription"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Waterford"
                            android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                            android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.19"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_date_reportDescription"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="12/12/2012"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                            android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_status_reportDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/green_medium"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textview_status_reportDescription"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Solved 14/01/2013"
                    android:textSize="11sp"
                    android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_problem_reportDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/image_mock"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview_category_reportDescription"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/ic_airport"
                        android:background="@color/green_medium" />

                    <TextView
                        android:id="@+id/textview_category_reportDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="Public Facility"
                        android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:background="@color/gray_medium">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/ic_bothered" />

                    <TextView
                        android:id="@+id/textview_bothered_reportDescription"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="fill_parent"
                        android:text="20 bothered"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/button_bothered_reportDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Are you bothered?"
                            android:textSize="15sp"
                            android:background="@drawable/bothered_button"
                            android:textColor="@color/white"
                            android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:onClick="addBothered"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/vigilant_object_vertical_margin_root_layout">

                <TextView
                    android:id="@+id/textview_nickname_reportDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/mock_username"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue_username"
                    android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_description_reportDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_1_paragraph"
                    android:layout_marginLeft="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout"
                    android:layout_marginBottom="@dimen/vigilant_object_vertical_margin_root_layout" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/vigilant_object_horizontal_margin_root_layout" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




